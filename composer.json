{
    "name": "waffle-commons/waffle",
    "version": "0.1.0-alpha3",
    "description": "A modern, minimalist, and security-focused PHP micro-framework.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Waffle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WaffleTests\\": "tests/src/"
        }
    },
    "authors": [
        {
            "name": "Leslie Petrimaux",
            "email": "contact@waffle-commons.cloud"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.5",
        "psr/container": "^2.0",
        "psr/http-message": "^1.1 || ^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^3.0",
        "psr/cache": "^3.0",
        "waffle-commons/contracts": "1.0.0-dev",
        "waffle-commons/utils": "1.0.0-dev",
        "psr/http-server-middleware": "^1.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "carthage-software/mago": "^1.0.0-rc",
        "vimeo/psalm": "^6.13",
        "php-mock/php-mock-phpunit": "^2.13"
    },
    "repositories": [
        {
            "type": "path",
            "canonical": false,
            "url": "../contracts",
            "options": {
                "versions": { "waffle-commons/contracts": "1.0.0-dev" },
                "symlink": true
            }
        },
        {
            "type": "path",
            "canonical": false,
            "url": "../utils",
            "options": {
                "versions": { "waffle-commons/utils": "1.0.0-dev" },
                "symlink": true
            }
        }
    ],
    "scripts": {
        "formatter": "vendor/bin/mago fmt",
        "linter": "vendor/bin/mago lint",
        "analyzer": "vendor/bin/mago analyze",
        "phpunit": "vendor/bin/phpunit --log-junit var/data/phpunit-coverage/junit.xml --coverage-html var/data/phpunit-coverage",
        "benchmark": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpbench run --report=default_report --output=waffle_html --retry-threshold=10"
        ],
        "mago": [
            "@formatter",
            "@linter",
            "@analyzer"
        ],
        "tests": [
            "@phpunit"
        ],
        "scan": [
            "@mago",
            "@tests"
        ],
        "ci": [
            "@mago",
            "@tests",
            "composer audit",
            "vendor/bin/psalm --taint-analysis"
        ]
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}
